{% extends "BeelabUserBundle::layout.html.twig" %}

{% block body %}
    <h1>Login</h1>

    {% if error %}
        <div class="alert alert-error">{{ error.message }}</div>
    {% endif %}

    <form action="{{ path("login_check") }}" method="post">
        <div class="control-group input-append">
            <label for="email">Email</label>
            <input id="email" type="email" name="_username" required="required" placeholder="email" class="input-medium" />
            <span class="add-on"><i class="icon-envelope"></i></span>
        </div>

        <div class="input-append">
            <label for="password">Password</label>
            <input type="password" id="password" name="_password" required="required" placeholder="password" class="input-medium" />
            <span class="add-on"><i class="icon-key"></i></span>
        </div>
        <div>
            <button type="submit" class="btn btn-primary"><i class="icon-signin"></i> Login</button>
        </div>
    </form>
{% endblock %}
